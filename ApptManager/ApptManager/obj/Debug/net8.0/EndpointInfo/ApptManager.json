        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user/available-slots-by-professional": {
      "get": {
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "name": "professionalId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TaxProfessional": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "phone": {
            "type": "string",
            "nullable": true
          },
          "contactNumber": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "incomeTaxFilingSpecialist": {
            "type": "boolean"
          },
          "corporateTaxConsultant": {
            "type": "boolean"
          },
          "investmentTaxPlanningAdvisor": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "UserRegistrationInfo": {
        "required": [
          "email",
          "firstName",
          "lastName",
          "password",
          "phoneNumber",
          "role"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "minLength": 1,
            "type": "string"
          },
          "lastName": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "phoneNumber": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          },
          "role": {
            "minLength": 1,
            "type": "string"
          },
          "isEmailVerified": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  }
}